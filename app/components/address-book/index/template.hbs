<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <p>
          Use search to find contacts.
          You can search by: name, address, country.
        </p>
        <div class="col-md-8 form-group">
            <div class="input-group">
              <div class="input-group-addon">
                <span class="fa fa-search"></span>
              </div>
              {{input
                type="text"
                value=filterBy
                class="form-control"
                placeholder="Who are you looking for?"
              }}
            </div>
        </div>
        <div class="col-md-4">
          {{#link-to 'addressBook.create'}}
            <button class="btn btn-success btn-block">
              <span class="fa fa-plus"></span> Add new contact
            </button>
          {{/link-to}}
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  {{#each contacts as |contact index|}}
    {{#if contact.id}}
      {{address-book/contact contact=contact index=index}}
    {{/if}}
  {{/each}}
</div>